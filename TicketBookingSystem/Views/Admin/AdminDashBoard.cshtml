<div class="container">
    <h2 class="text-center">Welcome Admin</h2>
    <div class="AdminBody d-flex justify-content-center mt-3">
        <div class="ManageBus shadow p-3 mb-5 bg-body-tertiary rounded m-3">
            <div>
                <img src="@Url.Content("~/image/bus-profile.png")" alt="Banner" style="width:100%; height:150px;" />
            </div>
            <div >
                <h4 class="card-title text-center">No of Buses : @ViewBag.BusCount</h4>
                <div class="d-flex">
                    <p>Manage Buses .....  </p>
                    <a asp-action="Index" asp-controller="Bus"> continue</a>
                </div>
            </div>
        </div>
        <div class="ManageBus shadow p-3 mb-5 bg-body-tertiary rounded m-3">
            <div>
                <img src="@Url.Content("~/image/user-profile.png")" alt="Banner" style="width:100%; height:150px;" />
            </div>
            <div >
                <h4 class="card-title text-center"> No of Users : @ViewBag.UserCount</h4>
                <div class="d-flex">
                    <p>Manage Users .....  </p>
                    <a asp-action="Index" asp-controller="User"> continue</a>
                </div>
            </div>
        </div>
       
    </div>

</div>
